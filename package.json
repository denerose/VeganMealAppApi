{
  "name": "vegan-meal-planning-api",
  "version": "1.0.0",
  "description": "RESTful API for vegan meal planning with weekly schedules and personal meal libraries",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test --preload tests/setup.ts",
    "test:watch": "bun test --preload tests/setup.ts --watch",
    "test:coverage": "bun test --preload tests/setup.ts --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "bun run prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "date-fns": "^3.5.0",
    "dotenv": "^16.4.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "prisma": "^7.0.0",
    "typescript": "^5.3.0"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "private": true
}
